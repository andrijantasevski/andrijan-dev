---
import BlogCard from "./BlogCard.astro";
export interface Props {
    posts: any;
}

const { posts } = Astro.props;
---

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    {
        posts.map((post: any) => {
            return (
                <BlogCard
                    blogLink={post.url}
                    blogTitle={post.frontmatter.title}
                />
            );
        })
    }
</div>
