---
import Layout from "../../layouts/Layout.astro";

import Snippets from "../../components/Snippets";

interface Frontmatter {
    title: string;
    shortDescription: string;
}

const snippets = await Astro.glob<Frontmatter>("../snippets/*.mdx");
---

<Layout title="Snippets" description="Useful snippets of code and boilerplate that help me be more productive when I am coding.">
    <Snippets snippetsArr={snippets} client:load />
</Layout>
