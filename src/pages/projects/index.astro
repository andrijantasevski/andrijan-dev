---
import ProjectSingle from "../../components/ProjectSingle.astro";
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Projects">
    <section class="py-4 text-gray-900 dark:text-gray-50">
        <div class="w-11/12 lg:w-7/12 2xl:w-5/12 mx-auto">
            <div class="mb-6">
                <h2 class="text-2xl lg:text-3xl font-bold mb-3">Projects</h2>
                <p>
                    All the projects I have built by using bleeding edge
                    technologies.
                </p>
            </div>

            <div class="grid grid-cols-1 gap-6">
                <ProjectSingle
                    projectTitle="Password Generator"
                    technologiesUsed="TypeScript · React · Tailwind"
                    projectDescription="A password generator with strength checking"
                    projectLink="https://password-generator-five-rho.vercel.app/"
                    projectGitHub="https://github.com/andrijantasevski/password-generator"
                    projectImage="/photos/password-generator.png"
                />

                <ProjectSingle
                    projectTitle="Vreeeme"
                    technologiesUsed="Next.js · Tailwind · React"
                    projectDescription="A weather app built with Next.js"
                    projectLink="https://vreeeme.vercel.app/"
                    projectGitHub="https://github.com/andrijantasevski/vreme"
                    projectImage="/photos/vreeeme.png"
                />

                <ProjectSingle
                    projectTitle="Chitajknigi"
                    technologiesUsed="Svelte · Tailwind · DaisyUI"
                    projectDescription="A CRUD app for managing books people have read"
                    projectLink="https://serene-tarsier-aa123f.netlify.app/"
                    projectGitHub="https://github.com/andrijantasevski/chitajknigi"
                    projectImage="/photos/chitaj-knigi.png"
                />
            </div>
        </div>
    </section>
</Layout>
