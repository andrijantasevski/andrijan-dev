---
import "../styles/base.css";
import Fonts from "../components/Fonts.astro";
import Favicon from "../components/Favicon.astro";
import Scripts from "../components/Scripts.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { content } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="author" content={content.author} />
    <meta name="robots" content="follow, index" />
    <meta name="description" content={content?.shortDescription} />
    <title>{content.title}</title>
    <Fonts />
    <Favicon />
    <Scripts />
  </head>
  <body class="dark:bg-gray-900 dark:text-gray-50">
    <Header />
    <main class="w-11/12 lg:w-7/12 2xl:w-5/12 mx-auto pt-8">
      <h1 class="text-4xl font-bold mb-3">{content.title}</h1>
      <div class="flex items-center gap-2 mb-6">
        <img
          class="w-10"
          src="/photos/andrijan-portrait.png"
          alt="Andrijan Portrait"
        />
        <p>{content.author} Â· {content.dateUpdated}</p>
      </div>
      <article>
        <slot />
      </article>
    </main>
    <Footer />
    <style is:global>
      /* Shiki config for light and dark mode */
      :root {
        --astro-code-color-text: #111827;
        --astro-code-color-background: #fff;
        --astro-code-token-constant: #116329;
        --astro-code-token-string: #0a3069;
        --astro-code-token-comment: #6e7781;
        --astro-code-token-keyword: #cf222e;
        --astro-code-token-parameter: #24292f;
        --astro-code-token-function: #8250df;
        --astro-code-token-string-expression: #0a3069;
        --astro-code-token-punctuation: #953800;
        --astro-code-token-link: #0a3069;
      }

      :root.dark {
        --astro-code-color-text: #f9fafb;
        --astro-code-color-background: #111827;
        --astro-code-token-constant: #add7ff;
        --astro-code-token-string: #89ddff;
        --astro-code-token-comment: #767c9db0;
        --astro-code-token-keyword: #5de4c7c0;
        --astro-code-token-parameter: #e4f0fb;
        --astro-code-token-function: #e4f0fbd0;
        --astro-code-token-string-expression: #89ddff;
        --astro-code-token-punctuation: #a6accd;
        --astro-code-token-link: #add7ff;
      }

      /* Styles for single blog posts */

      article h2,
      article h3,
      article h4,
      article h5,
      article h6 {
        @apply mb-2;
      }

      article p {
        @apply mb-4 leading-loose;
      }

      article h2 {
        @apply text-2xl font-bold;
      }

      article h3 {
        @apply text-xl font-bold;
      }

      article h4 {
        @apply text-lg font-bold;
      }

      article pre {
        @apply mb-4 rounded-md border-2 p-6 dark:border-gray-700 !important;
      }

      article code {
        font-family: "Inter" !important;
      }

      article blockquote {
        @apply mb-4 rounded-md border-2 bg-white p-6 text-gray-900 dark:border-gray-700
dark:bg-gray-900 dark:text-gray-50;
      }

      article blockquote p {
        @apply mb-0;
      }
    </style>
  </body>
</html>
