---
import { Image } from "@astrojs/image/components";
import GitHubIcon from "./icons/GitHubIcon.astro";

export interface Props {
  projectTitle: string;
  technologiesUsed: string;
  projectDescription: string;
  projectLink: string;
  projectGitHub: string;
  projectImage: string;
}
const { projectTitle, technologiesUsed, projectDescription, projectLink, projectGitHub, projectImage } = Astro.props;
---

<div class="bg-white dark:bg-gray-900 border-2 border-gray-200 dark:border-gray-700 rounded-md p-5 lg:p-6 lg:flex justify-between gap-6">
  <div class="flex flex-col justify-between gap-4 lg:w-5/12">
    <div>
      <h3 class="text-xl font-medium">
        <a href={projectLink}>{projectTitle}</a>
      </h3>
      <p class="text-sm mb-1">{technologiesUsed}</p>
      <p>{projectDescription}</p>
    </div>

    <div class="flex flex-col gap-4">
      <a class="lg:hidden" href={projectLink}>
        <img class="rounded-md" src={projectImage} alt="ELI Centar photo" />
      </a>

      <div class="flex justify-between items-center">
        <a aria-label={`Discover ${projectTitle}`} href={projectLink} class="bg-gray-200 dark:bg-gray-800 py-1.5 px-3 text-sm rounded-md transition-all border-2 hover:border-gray-400 dark:border-gray-900 dark:hover:border-gray-700">Discover</a>
        <a aria-label={`Discover ${projectTitle} on GitHub`} href={projectGitHub} title={`Open ${projectTitle} on GitHub`}>
          <GitHubIcon class="w-5 h-5 text-gray-900 dark:text-gray-50" />
        </a>
      </div>
    </div>
  </div>

  <a class="hidden lg:block lg:w-7/12" href={projectLink}>
    <Image class="rounded-md w-full" src={projectImage} alt={projectTitle} width={500} height={300} format={"webp"} />
  </a>
</div>
